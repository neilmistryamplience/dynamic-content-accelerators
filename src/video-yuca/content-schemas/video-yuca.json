{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/video-yuca.json",
  "title": "Video Yuca",
  "description": "Description",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type": "object",
  "properties": {
    "playerurl": {
      "type": "string",
      "minLength": 0,
      "maxLength": 2000,
      "title": "Player URL",
      "description": "Will default to https://www.yuca.tv/custom/celine/player.php"
    },
    "videoid": {
      "type": "string",
      "minLength": 0,
      "maxLength": 2000,
      "title": "The Video ID to play",
      "description": "Will default to https://www.yuca.tv/custom/celine/player.php"
    },
    "loop": {
      "title": "Loop",
      "description": "If the video loops",
      "type": "boolean"
    },
    "mute": {
      "title": "Mute",
      "description": "If the is muted",
      "type": "boolean"
    },
    "autorun": {
      "title": "Auto Run",
      "description": "If the is autoruns",
      "type": "boolean"
    },
    "lang": {
			"title": "Language",
			"description": "The language to play",
			"type": "string",
			"enum": [
				"en",
				"fr",
				"de",
				"it"
			]
		}
  }
}
