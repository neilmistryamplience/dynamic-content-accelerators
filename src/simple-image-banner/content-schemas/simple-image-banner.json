{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/simple-image-banner.json",
  "title": "Simple Image Banner",
  "description": "Simple Image Banner accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "SimpleImageBanner"
    },
    "bannerImage": {
      "description": "",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/simple-image.json"
        }
      ],
      "title": "Banner image"
    },
    "positionalLink": {
      "title": "Positional Link",
      "description": "A link that is positional for mobile and desktop",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/positionalLink"
        }
      ]
    },
    "linkcol": {
      "title": "Link BG Colour",
      "description": "The background colour for the links",
      "format": "color",
      "type": "string"
    },
    "links": {
      "title":"Global footer links",
      "type": "array",
      "minItems": 0,
      "maxItems": 4,
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/link"
          }
        ]
      }
    },
    "analytics": {
      "title": "Analytics Label",
      "type": "string",
      "description": "Analytics Label for this banner",
      "minLength": 0,
      "maxLength": 2000
    }
  },
  "propertyOrder": [
    "bannerImage",
    "linkcol",
    "links",
    "analytics",
    "component"
  ]
}
