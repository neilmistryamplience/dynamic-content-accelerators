{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/simple-image-banner-localised.json",
  "title": "Simple Image Banner Localised",
  "description": "Simple Image Banner Localised accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "SimpleImageBannerLocalised"
    },
    "bannerImage":{  
      "allOf":[  
         {  
            "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
         }
      ],
      "properties":{  
         "values":{  
            "items":{  
               "properties":{  
                  "value":{  
                     "allOf":[  
                        {  
                           "$ref":"{CONTENT_TYPE_BASEPATH}/simple-image.json"
                        }
                     ]
                  }
               }
            }
         }
      }
    },
    "positionalLink":{  
      "allOf":[  
         {  
            "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
         }
      ],
      "properties":{  
         "values":{  
            "items":{  
               "properties":{  
                  "value":{  
                     "allOf":[  
                        {  
                           "$ref":"{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/positionalLink"
                        }
                     ]
                  }
               }
            }
         }
      }
    },
    "linkcol": {
      "title": "Link Colour",
      "description": "The background colour for the links",
      "format": "color",
      "type": "string"
    },
    "links": {
      "type": "array",
      "minItems": 0,
      "maxItems": 4,
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/link"
          }
        ]
      }
    },
    "analytics": {
      "title": "Analytics Label",
      "description": "Analytics Label for this banner",
      "allOf": [
        { "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
      ]
    }
  },
  "propertyOrder": [
    "bannerImage",
    "linkcol",
    "links",
    "analytics",
    "component"
  ]
}
