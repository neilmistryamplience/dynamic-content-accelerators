{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/advanced-banner.json",
  "title": "Advanced Banner",
  "description": "Banner accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "bannerImage": {
      "title": "Banner Image",
      "description": "Select or create an image content",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/image.json"
        }
      ]
    },
    "header": {
      "title":"Header",
      "description": "Text for a header",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/advancedTextLocalised"
        }
      ]
    },
    "subheader": {
      "title":"Sub Header",
      "description": "Text for a sub header",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/advancedText"
        }
      ]
    },
    "description": {
      "title":"Description",
      "description": "Text for a Description",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/advancedText"
        }
      ]
    },
    "disclaimer": {
      "type": "string",
      "minLength": 0,
      "maxLength": 250,
      "title": "Disclaimer Text",
      "description": "Add disclaimer text"
    },
    "disclaimerFontColour": {
      "title": "Disclaimer Font Colour",
      "description": "Choose a colour",
      "format": "color",
      "type": "string"
    },
    "disclaimerTextHorizontal": {
      "title": "Disclaimer Text Horizontal Position",
      "description": "Choose a position",
      "type": "string",
      "enum": ["left", "center", "right"]
    },
    "textPositionHorizontal": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "title": "Horizontal text position",
      "description": "Select a position"
    },
    "textPositionVertical": {
      "type": "string",
      "enum": ["top", "middle", "bottom"],
      "title": "Vertical text position",
      "description": "Select a position"
    },
    "textPositionHorizontalMobile": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "title": "Horizontal text position - mobile",
      "description": "Select a position"
    },
    "textPositionVerticalMobile": {
      "type": "string",
      "enum": ["top", "middle", "bottom"],
      "title": "Vertical text position - mobile",
      "description": "Select a position"
    },
    "button": {
      "title": "Button",
      "description": "Add a button",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/advanced-button.json"
        }
      ]
    },
    "backgroundGradient": {
      "title": "Background gradient",
      "description": "Add a gradient behind the text?",
      "type": "string",
      "enum": ["left", "right", "top", "bottom", "full"]
    },
    "hasVideo": {
      "title": "Include video?",
      "description": "Yes",
      "type": "boolean"
    },
    "backgroundGradientMobile": {
      "title": "Background gradient - mobile",
      "description": "Add a gradient behind the text?",
      "type": "string",
      "enum": ["left", "right", "top", "bottom", "full"]
    },
    "hideMobileText": {
      "title": "Hide description on mobile?",
      "description": "Yes",
      "type": "boolean"
    },
    "video": {
      "title": "Video",
      "description": "Add a video",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/video.json"
        }
      ]
    },
    "showVideoTitle": {
      "title": "Show Content Above Video",
      "description": "Show headline, copy, CTA, etc above video",
      "type": "boolean"
    }
  },
  "propertyOrder": [
    "bannerImage",
    "header",
    "subheader",
    "description",
    "hideMobileText",
    "button",
    "textPositionHorizontal",
    "textPositionVertical",
    "backgroundGradient",
    "textPositionHorizontalMobile",
    "textPositionVerticalMobile",
    "backgroundGradientMobile",
    "hasVideo",
    "video",
    "showVideoTitle",
    "disclaimer",
    "disclaimerFontColour",
    "disclaimerTextHorizontal",
    "togglePOI"
  ]
}
