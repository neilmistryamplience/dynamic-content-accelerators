{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/title.json",
  "title": "Title",
  "description": "Title content type",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type": "object",
  "properties": {
    "header": {
      "title":"Header",
      "description": "Text for a header",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/advancedText"
        }
      ]
    },
    "description": {
      "title":"Description",
      "description": "Description Text",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/advancedText"
        }
      ]
    },
    "button": {
      "title": "Button",
      "description": "Add a button",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/advanced-button.json"
        }
      ]
    },
    "titlepadding": {
      "title": "Padding",
      "description": "Set padding size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    }
  },
  "propertyOrder": [
    "header",
    "description",
    "button",
    "titlepadding"
  ]
}

