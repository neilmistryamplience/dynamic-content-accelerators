{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/sfcc-slot-flexible-localized.json",
	"title": "SFCC Localised Slot",
	"description": "SFCC Localised Slot",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"_meta": {
			"type": "object",
			"properties": {
				"deliveryKey": {
					"type": "string",
					"title": "Delivery key",
					"description": "Enter the delivery key for this item"
				}
			}
		},
		"_environment": {
			"title": "SFCC",
			"description": "SFCC",
			"type": "object",
			"properties": {
				"sfcc_slot": {
					"$ref": "https://localhost.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc-slot.json#"
				},
				"sfcc_category_slot": {
					"$ref": "https://localhost.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc-category-slot.json#"
				},
				"sfcc_site": {
					"$ref": "https://localhost.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc-site.json#"
				}
			},
			"propertyOrder": [
				"sfcc_site",
				"sfcc_slot",
				"sfcc_category_slot"
			]
		},
		"content": {
			"allOf": [
				{
					"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
				},
				{
					"properties": {
						"values": {
							"items": {
								"properties": {
									"value": {
										"title": "Localized Content",
										"type": "object",
										"allOf": [
											{
												"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
											},
											{
												"properties": {
													"contentType": {
														"title": "Slot Content",
														"enum": [
															"https://www.amplience.com/examples/banner.json",
															"https://www.amplience.com/examples/slider.json",
															"https://www.amplience.com/examples/promolist.json",
															"https://www.amplience.com/examples/video.json",
															"https://www.amplience.com/examples/text.json",
															"https://www.amplience.com/examples/externalblock.json",
															"https://www.amplience.com/examples/splitblock.json",
															"https://www.amplience.com/examples/cardlist.json",
															"https://www.amplience.com/examples/image.json",
															"https://www.amplience.com/examples/container.json",
															"https://www.amplience.com/examples/productlist.json",
															"https://www.amplience.com/examples/blogPost.json",
															"https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/banner.json",
															"https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/image.json",
															"https://unpkg.com/dc-accelerators-content-rendering-service/dist/contentTypes/video.json"
														]
													}
												}
											}
										]
									}
								}
							}
						}
					}
				}
			]
		}
	}
}