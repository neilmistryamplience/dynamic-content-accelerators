{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://www.amplience.com/examples/productlist.json",
	"title": "Product List",
	"description": "A list of products to be displayed",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"header": {
			"type": "string",
			"minLength": 0,
			"maxLength": 100,
			"title": "Header",
			"description": "Optional header for the card list"
		},
		"heroList": {
			"type": "boolean",
			"title": "Hero format",
			"description": "Hero format supports exactly 3 cards"
		},
		"productList": {
			"title": "Product Selector",
			"description": "description",
			"type": "array",
			"minItems": 1,
			"maxItems": 30,
			"items": {
				"type": "string"
			},
			"ui:extension": {
				"name": "sfcc-product-selector"
			}
		}
	},
	"propertyOrder": [
		"header",
		"heroList",
		"productList"
	]
}