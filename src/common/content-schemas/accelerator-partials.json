{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json",
  "title": "Accelerator partials (CC)",
  "description": "Partials",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "definitions": {
    "advancedText": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 0,
          "maxLength": 255,
          "title": "Text",
          "description": "Add Text"
        },
        "style": {
          "title": "Style",
          "description": "Specify a style (defaults to black)",
          "type": "string",
          "enum": ["black", "white", "flashing"]
        },
        "fontColor": {
          "title": "(Optional) - Choose a font colour",
          "type": "string",
          "format": "color"
        },
        "fontSize": {
          "title": "Font Size",
          "description": "Specify a font size",
          "type": "string",
          "enum": ["small", "medium", "large"]
        },
        "fontWeight": {
          "title": "Font Weight",
          "description": "Specify a font weight",
          "type": "string",
          "enum": ["normal", "bold"]
        }
      }
    },
    "advancedCounter": {
      "type": "object",
      "properties": {
        "counter": {
          "title": "Counter",
          "description": "A counter to an end date / time",
          "type": "string",
          "format": "date-time",
          "minLength": 0,
          "maxLength": 50,
          "examples": ["2020-12-15T00:00:00Z", "2021-01-05T06:44:03Z"],
          "$comment": "A string property with the date format stored in UTC",
          "ui:extension": {
            "name": "date-picker"
          }
        },
        "style": {
          "title": "Style",
          "description": "Specify a style (defaults to black)",
          "type": "string",
          "enum": ["black", "white", "flashing"]
        },
        "fontColor": {
          "title": "(Optional) - Choose a font colour",
          "type": "string",
          "format": "color"
        },
        "fontSize": {
          "title": "Font Size",
          "description": "Specify a font size",
          "type": "string",
          "enum": ["small", "medium", "large"]
        },
        "fontWeight": {
          "title": "Font Weight",
          "description": "Specify a font weight",
          "type": "string",
          "enum": ["normal", "bold"]
        }
      }
    },
    "advancedTextLocalised": {
      "type": "object",
      "properties": {
        "text": {
          "title": "Text",
          "description": "Add text",
          "allOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string"
            }
          ],
          "ui:extension": {
            "name": "localisation"
          }
        },
        "style": {
          "title": "Style",
          "description": "Specify a style (defaults to black)",
          "type": "string",
          "enum": ["black", "white"]
        },
        "fontColor": {
          "title": "(Optional) - Choose a font colour",
          "type": "string",
          "format": "color"
        },
        "fontSize": {
          "title": "Font Size",
          "description": "Specify a font size",
          "type": "string",
          "enum": ["small", "medium", "large"]
        },
        "fontWeight": {
          "title": "Font Weight",
          "description": "Specify a font weight",
          "type": "string",
          "enum": ["normal", "bold"]
        }
      }
    },
    "roundel": {
      "title": "Roundel",
      "description": "Use this to enter image roundel's details",
      "type": "object",
      "properties": {
        "roundel": {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link",
          "title": "Roundel image"
        },
        "roundelRatio": {
          "type": "number",
          "title": "Roundel ratio",
          "description": "A value between 0 and 1 e.g. 0.6 (default is 0.2)",
          "minimum": 0,
          "maximum": 1
        },
        "roundelPosition": {
          "type": "string",
          "enum": [
            "Top Left",
            "Top Right",
            "Bottom Left",
            "Bottom Right",
            "Center"
          ],
          "title": "Roundel position",
          "description": "Roundel position is top left by default"
        }
      }
    },
    "link": {
      "title": "Link",
      "description": "Use this to configure links",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "minLength": 0,
          "maxLength": 255,
          "title": "Label"
        },
        "value": {
          "type": "string",
          "minLength": 0,
          "maxLength": 2000,
          "title": "Value",
          "pattern": "^(http://www.|https://www.|http://|https://)?[a-z0-9]+([-.]{1}[a-z0-9]+)*.[a-z]{2,5}(:[0-9]{1,5})?(/.*)?$",
          "description": "Enter an absolute URL"
        }
      }
    },
    "position": {
      "type": "object",
      "properties": {
        "posX": {
          "title": "Horizontal Position",
          "description": "Horizontal percentage",
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "posY": {
          "title": "Vertical Position",
          "description": "Verical percentage",
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },

    "positionalLink": {
      "title": "Positional Button",
      "description": "Button which can be positioned",
      "type": "object",
      "properties": {
        "button": {
          "title": "Button",
          "description": "Add a button",
          "type": "object",
          "allOf": [
            {
              "$ref": "{CONTENT_TYPE_BASEPATH}/advanced-button.json"
            }
          ]
        },
        "posd": {
          "title": "Desktop position",
          "description": "Desktop position percentages",
          "type": "object",
          "allOf": [
            {
              "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/position"
            }
          ]
        },
        "posm": {
          "title": "Mobile position",
          "description": "Mobile position percentages",
          "type": "object",
          "allOf": [
            {
              "$ref": "{CONTENT_TYPE_BASEPATH}/accelerator-partials.json#/definitions/position"
            }
          ]
        }
      }
    },
    "snippet": {
      "title": "Snippet",
      "description": "Use this to add snippets to the blog post",
      "type": "object",
      "properties": {
        "image": {
          "description": "",
          "type": "object",
          "allOf": [
            {
              "$ref": "{CONTENT_TYPE_BASEPATH}/image.json"
            }
          ],
          "title": "Image"
        },
        "title": {
          "type": "string",
          "minLength": 0,
          "maxLength": 255,
          "title": "Title"
        },
        "description": {
          "type": "string",
          "minLength": 0,
          "maxLength": 500,
          "title": "Description"
        },
        "category": {
          "type": "array",
          "title": "Category",
          "description": "The name of the category this relates too",
          "items": {
            "type": "string",
            "enum": [
              "women",
              "men",
              "beauty",
              "lighting",
              "furniture",
              "electricals",
              "inspiration"
            ]
          }
        },
        "keywords": {
          "type": "array",
          "title": "Keywords",
          "description": "Keywords",
          "validation": "",
          "items": {
            "type": "string",
            "title": "label",
            "description": "keyword",
            "validation": "keyword",
            "minLength": 0,
            "maxLength": 500
          },
          "minItems": 0,
          "maxItems": 50
        },
        "author": {
          "type": "string",
          "title": "Author",
          "description": "The author of the post",
          "enum": [
            "Hazel Nutkins",
            "Macadamia Smith",
            "Sally Almond",
            "Desmond Cobnut",
            "Jose Pistachio"
          ]
        },
        "blogdate": {
          "type": "string",
          "title": "Creation Date",
          "description": "Enter date (yyyy/mm/dd) that blog is created",
          "validation": "YYYY/MM/DD",
          "format": "text",
          "minLength": 0,
          "maxLength": 10
        },
        "cta": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/definitions/link"
            }
          ]
        }
      }
    },
    "anyComponent": {
      "enum": [
        "{CONTENT_TYPE_BASEPATH}/advanced-banner-localised.json",
        "{CONTENT_TYPE_BASEPATH}/advanced-banner.json",
        "{CONTENT_TYPE_BASEPATH}/banner.json",
        "{CONTENT_TYPE_BASEPATH}/blog-post.json",
        "{CONTENT_TYPE_BASEPATH}/blog-list.json",
        "{CONTENT_TYPE_BASEPATH}/card-list.json",
        "{CONTENT_TYPE_BASEPATH}/card.json",
        "{CONTENT_TYPE_BASEPATH}/collection-block.json",
        "{CONTENT_TYPE_BASEPATH}/collection.json",
        "{CONTENT_TYPE_BASEPATH}/external-block.json",
        "{CONTENT_TYPE_BASEPATH}/form.json",
        "{CONTENT_TYPE_BASEPATH}/image.json",
        "{CONTENT_TYPE_BASEPATH}/map.json",
        "{CONTENT_TYPE_BASEPATH}/navigation.json",
        "{CONTENT_TYPE_BASEPATH}/page.json",
        "{CONTENT_TYPE_BASEPATH}/promo-list.json",
        "{CONTENT_TYPE_BASEPATH}/rich-text.json",
        "{CONTENT_TYPE_BASEPATH}/sfcc-curated-products.json",
        "{CONTENT_TYPE_BASEPATH}/sfcc-product-search.json",
        "{CONTENT_TYPE_BASEPATH}/simple-image-banner-localised.json",
        "{CONTENT_TYPE_BASEPATH}/simple-image-banner.json",
        "{CONTENT_TYPE_BASEPATH}/slider.json",
        "{CONTENT_TYPE_BASEPATH}/split-block.json",
        "{CONTENT_TYPE_BASEPATH}/text.json",
        "{CONTENT_TYPE_BASEPATH}/title.json",
        "{CONTENT_TYPE_BASEPATH}/video.json"
      ]
    }
  }
}
